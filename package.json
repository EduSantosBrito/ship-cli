{
  "name": "ship-monorepo",
  "description": "Linear + Jujutsu workflow CLI for AI agents - manage tasks and stacked changes",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "Eduardo Santos de Brito",
  "repository": {
    "type": "git",
    "url": "https://github.com/EduSantosBrito/ship-cli.git"
  },
  "homepage": "https://github.com/EduSantosBrito/ship-cli#readme",
  "bugs": {
    "url": "https://github.com/EduSantosBrito/ship-cli/issues"
  },
  "keywords": [
    "linear",
    "jj",
    "jujutsu",
    "cli",
    "ai",
    "opencode",
    "task-management",
    "stacked-diffs",
    "effect"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r build",
    "check": "pnpm -r check",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "test": "pnpm -r test",
    "ship": "tsx packages/cli/src/bin.ts",
    "publish:all": "pnpm build && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
